{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build API V1",
      "command": "cd ${workspaceFolder}/api/v1 && go build -o ingenialists-api-v1",
      "type": "shell",
      "presentation": {
        "reveal": "silent"
      },
      "group": "build",
      "problemMatcher": "$go",
      "windows": {
        "command": ".\\scripts\\build_api_v1.cmd"
      }
    },
    {
      "label": "Update Swagger Docs V1",
      "command": "cd ${workspaceFolder}/api/v1 && swag init",
      "type": "shell",
      "presentation": {
        "reveal": "silent"
      },
      "group": "build",
      "problemMatcher": "$go",
      "windows": {
        "command": ".\\scripts\\update_swagger_docs_v1.cmd"
      }
    }
  ]
}
